<div id="genre_index">
  <h1 align="center">Listing All Genres</h1>
  <div align="center">
  <% @genres.each do |genre| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="book-title">
            <%= link_to "#{genre.name}", genre_path(genre) %>
          </li>
          <li><small><%= pluralize(genre.books.count, "book") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
  </div>
</div>
