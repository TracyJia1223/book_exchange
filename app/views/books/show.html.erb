<div id="book_show">
  <br>
  <h2 align="center" class="book_show_title"><%= @book.title %></h2>
  <br><br><br><br><br><br><br>
  <div class="well col-xs-8 col-xs-offset-2">
      <ul class="listing">
        <div class="row">
          <div class="col-md-8">
            <li><strong class="book-info">Author:</strong> <span class="book-details"><%= @book.author %></span></li>
            <li><strong class="book-info">Publisher:</strong> <span class="book-details"><%= @book.publisher %></span></li>
            <li><strong class="book-info">Weight:</strong> <span class="book-details"><%= @book.weight %></span>kg</li>
          </div>
        </div>
      </ul>
    <hr>
    <h4 class="description"><strong>Description:</strong></h4>
    <span id="description-detail"><%= simple_format(@book.description) %></span>
    <%# if @book.image_file_size %>
      <%# link_to image_tag(@book.image.url(:large)), @book.image.url, target: '_blank' %>
    <%# end %>
    <div class="book-actions">
      <% if logged_in? && false %>
        <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Delete', book_path(@book),
                          method: :delete,
                          data: {confirm: 'Are you sure?'}, class: "btn btn-xs btn-danger" %>
      <% else %>
        <%= link_to 'Add to your book list', add_to_booklist_path(@book), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Add to your wish list', add_to_wishlist_path(@book), class: "btn btn-xs btn-primary" %>
      <% end %>
      <%= link_to 'View all', books_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
              Who has this book?
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
          <div class="panel-body">
            <% if @book_owners.count == 0 %>
              Sorry, we counld not find a match
            <% else %>
              <% @book_owners.each do |owner| %>
                <li><%= link_to owner.full_name, user_path(owner) %></li>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
