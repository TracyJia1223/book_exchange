<div id="user_index">
  <br>
  <h1 align="center" id="user_index_title">All book fans</h1>
  <br>
  <div align="center">
    <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <% if user.image.present? %>
            <li><%= image_tag user.image.thumb.url, class: "img-circle" %></li>
          <% end %>
          <li class="book-title">
            <%= link_to user.full_name, user_path(user) %>
          </li>
          <li id="city"><%= user.city %></li>
          <li><small>owns <%= pluralize(user.owned_books.count, "book") if user.owned_books %>
          </small></li>
          <li><small>wishes <%= pluralize(user.wished_books.count, "book") if user.wished_books %>
          </small></li>
        </div>
      </div>
    </ul>
    <% end %>
    <%= will_paginate %>
  </div>
</div>
